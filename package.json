		"db:sync": "npm run db:migrate -- --local && npm run db:migrate -- --remote",
		"db:init": "wrangler d1 execute blog-to-post --file=./src/worker/schema.sql",
		"db:migrate": "wrangler d1 migrations apply blog-to-post",
		"db:status": "wrangler d1 migrations list blog-to-post",
		"db:exec": "wrangler d1 execute blog-to-post",
		"db:local": "npm run db:exec -- --local",
		"db:remote": "npm run db:exec -- --remote",
		"deploy": "wrangler deploy",
		"dev": "vite",
